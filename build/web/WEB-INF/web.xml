<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
    <!-- Config for LoginServlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <!-- Config for SuperCategoryServlet -->
    <servlet>
        <servlet-name>SuperCategoryServlet</servlet-name>
        <servlet-class>Controller.SuperCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SuperCategoryServlet</servlet-name>
        <url-pattern>/Admin/SuperCategoryServlet</url-pattern>
    </servlet-mapping>
    <!-- Config for CustomerManagementServlet -->
    <servlet>
        <servlet-name>CustomerManagementServlet</servlet-name>
        <servlet-class>Controller.CustomerManagementServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StaffManagementServlet</servlet-name>
        <servlet-class>Controller.StaffManagementServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminManagementServlet</servlet-name>
        <servlet-class>Controller.AdminManagementServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerManagementServlet</servlet-name>
        <url-pattern>/Admin/CustomerManagementServlet</url-pattern>
    </servlet-mapping>
    <!-- Config for RegisterServlet -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>Controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <!-- Config for SendVerificationServlet -->
    <servlet>
        <servlet-name>SendVerificationServlet</servlet-name>
        <servlet-class>Controller.SendVerificationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SendVerificationServlet</servlet-name>
        <url-pattern>/SendVerificationServlet</url-pattern>
    </servlet-mapping>
    <!-- Config for ResendVerificationServlet -->
    <servlet>
        <servlet-name>ResendVerificationServlet</servlet-name>
        <servlet-class>Controller.ResendVerificationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResendVerificationServlet</servlet-name>
        <url-pattern>/ResendVerificationServlet</url-pattern>
    </servlet-mapping>
    <!-- Config for VerifyCodeServlet -->
    <servlet>
        <servlet-name>VerifyCodeServlet</servlet-name>
        <servlet-class>Controller.VerifyCodeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerifyCodeServlet</servlet-name>
        <url-pattern>/VerifyCodeServlet</url-pattern>
    </servlet-mapping>
    <!-- Session timeout config -->
    <servlet-mapping>
        <servlet-name>StaffManagementServlet</servlet-name>
        <url-pattern>/Admin/StaffManagementServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminManagementServlet</servlet-name>
        <url-pattern>/Admin/AdminManagementServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <session-timeout>30</session-timeout>
</web-app>
